{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "t1",
            "program": "${workspaceFolder}/t1.js",
        },
        {
            "type": "node",
            "request": "launch",
            "name": "build",
            "program": "${workspaceFolder}/node_modules/.bin/rollup",
            "args": [
                "-c"
            ],
            "cwd": "${workspaceFolder}",
            "autoAttachChildProcesses": true,
            "console": "integratedTerminal"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Rollup",
            "program": "${workspaceFolder}/node_modules/.bin/rollup",
            "args": [
                "-c"
            ],
            "cwd": "${workspaceFolder}",
            "autoAttachChildProcesses": true,
            "console": "integratedTerminal"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\rollup.config.js"
        }
    ]
}